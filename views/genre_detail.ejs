<!DOCTYPE html>
<html lang="en">

<%- include(head) %>

<body id="abc">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include(sidebar) %>
            </div>
            <div>
                <h1>Genre: <%= genre.name %></h1>

<div style="margin-left: 20px; margin-top: 20px; max-width: 600px;">
  <h4>Books</h4>

  <dl>
    <% if (genre_books.length > 0) { %>
      <% genre_books.forEach(function(book) { %>
        <dt>
          <a href="<%= book.url %>"><%= book.title %></a>
        </dt>
        <dd><%= book.summary %></dd>
      <% }); %>
    <% } else { %>
      <p>This genre has no books</p>
    <% } %>
  </dl>
</div>

            </div>
        </div>
    </div>
</body>

</html>