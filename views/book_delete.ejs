<!DOCTYPE html>
<html lang="en">

<%- include(head) %>

    <body id="abc">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2">
                    <%- include(sidebar) %>
                </div>
                <div style="max-width: 1000px;" >
                    
                    <h1><%= title %>: <%= book.title %></h1>
                    <p><%= book.summary %></p>

                    <% if (book_instances.length) { %>
                    <p><strong>Delete the following books instances before attempting to delete this book.</strong></p>
                    <div style="margin-left: 20px; margin-top: 20px">
                        <h4>Book instances</h4>
                        <dl>
                        <% book_instances.forEach(instance => { %>
                            <dt><a href="<%= instance.url %>"><%= instance.imprint %></a></dt>
                            <dd><%= instance.status %></dd>
                            <dd><%= instance.due_back_formatted %></dd>
                        <% }); %>
                        </dl>
                    </div>
                    <% } else { %>
                    <p>Do you really want to delete this Book?</p>
                    <form method="POST" action="">
                        <div class="form-group">
                        <input id="bookid" class="form-control" type="hidden" name="bookid" required="true" value="<%= book._id %>">
                        </div>
                        <button class="btn btn-primary" type="submit">Delete</button>
                    </form>
                    <% } %>

                </div>
            </div>
        </div>
    </body>

</html>